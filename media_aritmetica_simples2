/* ========================================================================= */
/* --- Bibliotecas --- */
#include <stdio.h>
#include <stdlib.h>

/* ========================================================================= */
/* --- Constantes --- */
#define N  6	// o valor de N que será o tamanho do vetor

/* ========================================================================= */
/* --- Macros --- */


/* ========================================================================= */
/* --- Protótipos de Funções --- */


/* ========================================================================= */
/* --- Variáveis Globais --- */


/* ========================================================================= */
/* --- Função Principal --- */

int main() {
	

	float media[N];
	float med = 0.0;
	int i;
	
	for(i=0;i<N;i++)
	{
		printf("valor %d = ", i);
		scanf("%f", &media[i]);
	} // end for
	
	for(i=0;i<N;i++)
		med += media[i];
	
	med /= N;
	
	printf("M\x82 \bdia= %.2f\n", med );	


	system("PAUSE");
	return 0;
}

/* ========================================================================= */
/* --- Desenvolvimento de Funções --- */
