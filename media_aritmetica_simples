/* ========================================================================= */
/* --- Função Principal --- */

int main() {
	

	float media[4];
	float med;
	int i;
	
	for(i=0;i<4;i++)
	{
		printf("valor %d = ", i);
		scanf("%f", &media[i]);
	} // end for
	
	med = (media[0] + media[1] + media[2] + media[3]) / 4.0;
	
	printf("M\x82 \bdia= %.2f\n", med );

	system("PAUSE");
	return 0;
}

