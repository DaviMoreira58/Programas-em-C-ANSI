#include <stdio.h>

int main(){
	int altura;
	char sexo;
	float pesoIdeal;
	
	printf("Digite sua altura: ");
	scanf("%i", &altura);
	fflush(stdin);
	printf("Digite o genero: ");
	scanf("%c", &sexo);
	fflush(stdin);
	
	if(sexo == 'm'){
		pesoIdeal = (72.7 * altura) - 58;
		printf("Seu peso ideal eh %.2f", pesoIdeal);
		
	}else{
		pesoIdeal = (62.1 * altura) - 44.7;
		printf("Seu peso ideal eh %.2f", pesoIdeal);
	}
	
	return 0;
}
