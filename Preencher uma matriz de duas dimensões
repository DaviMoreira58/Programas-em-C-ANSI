/* ========================================================================= */
/* --- Bibliotecas --- */
#include <stdio.h>
#include <stdlib.h>


/* ========================================================================= */
/* --- Constantes --- */


/* ========================================================================= */
/* --- Macros --- */


/* ========================================================================= */
/* --- Protótipos de Funções --- */


/* ========================================================================= */
/* --- Variáveis Globais --- */


/* ========================================================================= */
/* --- Função Principal --- */

int main() {
	
	int matriz[4][6] = {0}; 
	int linha,coluna, numero, i,j;
	
	while(1){
		
		for(i=0;i<4;i++){
			printf("-------------------------------------\n");
			printf("|");
			for(j=0;j<6;j++){
				printf(" %3d |", matriz[i][j]);
			}
			putchar('\n');
		}
		printf("-------------------------------------\n");
		
		printf("Linha: ");
		scanf("%d", &linha);
		printf("Coluna: ");
		scanf("%d", &coluna);
		printf("Valor de 0-999: ");
		scanf("%d", &numero);
		
		matriz[linha - 1][coluna - 1] = numero; 
		system("CLS");
		
	}
	
	return 0;
}

/* ========================================================================= */
/* --- Desenvolvimento de Funções --- */




